{
  "build": {
    "builder": "nixpacks",
    "nixpacksVersion": "latest",
    "plan": {
      "phases": {
        "setup": {
          "nixPackages": ["php", "php-fpm"]
        },
        "install": {
          "commands": ["composer install"]
        },
        "build": {
          "commands": ["echo 'Build completed'"]
        },
        "start": {
          "commands": ["php -S 0.0.0.0:80 -t ."]
        }
      }
    }
  }
}
